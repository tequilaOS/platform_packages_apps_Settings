<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_preference_layout_height_settings"
    android:layout_marginStart="@dimen/top_preference_layout_start_margin"
    android:layout_marginEnd="@dimen/top_preference_layout_end_margin"
    android:layout_marginTop="@dimen/top_preference_layout_top_margin"
    android:background="@drawable/top_preference_top_background"
    android:paddingEnd="@dimen/top_preference_layout_end_padding"
    android:paddingStart="@dimen/top_preference_layout_start_padding">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
	    android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/preference_icon_margin"
        app:layout_constraintStart_toEndOf="@android:id/icon">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/system_neutral1_0"
            android:textSize="16sp" />

        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/system_neutral1_300"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
