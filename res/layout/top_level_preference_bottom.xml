<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tequila_settings_card_height"
    android:layout_marginStart="@dimen/tequila_settings_margin"
    android:layout_marginEnd="@dimen/tequila_settings_margin"
    android:layout_marginTop="0dp"
    android:background="@drawable/top_preference_bottom_background"
    android:paddingEnd="@dimen/tequila_settings_margin"
    android:paddingStart="@dimen/tequila_settings_card_margin_start">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
	    android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/tequila_settings_icon_margin"
        app:layout_constraintStart_toEndOf="@android:id/icon">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tequila_settings_card_title_color"
            android:textSize="16sp" />

        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tequila_settings_card_summary_color"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
